@model NhaSachMetMoi.Models.KH

@{
    ViewBag.Title = "Đăng Ký";
    Layout = "~/Views/Shared/Layoutpage.cshtml";
}

<div class="formdkbox">
    <img src="~/Content/images/logo1.png" alt="Logo" style="display: block; margin: 0 auto; width: 100px; height: auto;" />
    <div class="buttondkbox">
        <a href="@Url.Action("IndexTK", "DangNhap")" class="toggledkbtn active">Đăng nhập</a>
        <a href="@Url.Action("DangKy", "DangNhap")" class="toggledkbtn">Đăng ký</a>
    </div>

    @using (Html.BeginForm("DangKy", "DangNhap", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-group">
            @Html.LabelFor(model => model.HoTen, "Họ Tên", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.HoTen, new { htmlAttributes = new { @class = "inputdkfield form-control" } })
                @Html.ValidationMessageFor(model => model.HoTen, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TaiKhoan, "Tài Khoản", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TaiKhoan, new { htmlAttributes = new { @class = "inputdkfield form-control" } })
                @Html.ValidationMessageFor(model => model.TaiKhoan, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.MatKhau, "Mật Khẩu", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.PasswordFor(model => model.MatKhau, new { @class = "inputdkfield form-control" })
                @Html.ValidationMessageFor(model => model.MatKhau, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Email, "Email", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "inputdkfield form-control" } })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            @Html.LabelFor(model => model.DiaChi, "Địa Chỉ", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DiaChi, new { htmlAttributes = new { @class = "inputdkfield form-control" } })
                @Html.ValidationMessageFor(model => model.DiaChi, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DienThoai, "Điện Thoại", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DienThoai, new { htmlAttributes = new { @class = "inputdkfield form-control" } })
                @Html.ValidationMessageFor(model => model.DienThoai, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.NgaySinh, "Ngày Sinh", new { @class = "control-label col-md-2" })
            <div class="col-md-10" style="margin-bottom:10px">
                @Html.TextBoxFor(model => model.NgaySinh, "{0:yyyy-MM-dd}",
                    new { @class = "form-control", @type = "date", @max = DateTime.Now.ToString("yyyy-MM-dd") })
                @Html.ValidationMessageFor(model => model.NgaySinh, "", new { @class = "text-danger" })
            </div>
        </div>

        <button type="submit" class="submitdkbtn">Đăng ký</button>
    }
</div>
