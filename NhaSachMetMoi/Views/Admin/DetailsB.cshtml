@model NhaSachMetMoi.Models.BookingInfo

@{
    ViewBag.Title = "Chi Tiết Booking";
    Layout = "~/Views/Shared/Admin.cshtml";
    <link href="~/Content/StyleSheet1.css" rel="stylesheet" />
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Chi Tiết Booking</h2>
    <div class="table-responsive">
        <table class="table table-bordered details-table">
            <tbody>
                <tr>
                    <th>Booking ID</th>
                    <td>@Model.BookingID</td>
                </tr>
                <tr>
                    <th>Họ Tên</th>
                    <td>@Model.FullName</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>@Model.Email</td>
                </tr>
                <tr>
                    <th>Số Điện Thoại</th>
                    <td>@Model.PhoneNumber</td>
                </tr>
                <tr>
                    <th>Gói Phòng</th>
                    <td>@Model.RoomPackage</td>
                </tr>
                <tr>
                    <th>Thời Lượng</th>
                    <td>@Model.Duration giờ</td>
                </tr>
                <tr>
                    <th>Ngày</th>
                    <td>@Model.BookingDate.ToString("dd/MM/yyyy")</td>
                </tr>
                <tr>
                    <th>Giờ</th>
                    <td>@Model.BookingTime</td>
                </tr>
                <tr>
                    <th>Tổng Tiền</th>
                    <td>@string.Format("{0:0,0}", Model.TotalPrice).Replace(",", ".") VNĐ</td>
                </tr>
                <tr>
                    <th>Ghi Chú</th>
                    <td>@Model.Note</td>
                </tr>
                <tr>
                    <th>Trạng Thái</th>
                    <td>@Model.ConfirmationStatus</td>
                </tr>

            </tbody>
        </table>
    </div>
    <div class="text-center mt-4">
        <a href="@Url.Action("IndexB", "Admin")" class="btn btn-secondary">Quay Lại</a>
        <a href="@Url.Action("EditB", "Admin", new { id = Model.BookingID })" class="btn btn-warning">Chỉnh Sửa</a>
        <a href="@Url.Action("DeleteB", "Admin", new { id = Model.BookingID })" class="btn btn-danger">Xóa</a>
    </div>
</div>

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet" />
<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

<style>
    .details-container {
        padding: 20px;
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
    }

    .details-table th {
        width: 30%;
        background-color: #f2f2f2;
        font-weight: bold;
    }

    .details-table td {
        width: 70%;
    }
</style>
