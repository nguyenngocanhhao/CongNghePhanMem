@model IEnumerable<NhaSachMetMoi.Models.BookingInfo>


@{
    ViewBag.Title = "Lịch sử đặt phòng";
    Layout = "~/Views/Shared/Layoutpage.cshtml";
}

<br />
<div class="container mt-5 order-history-container">
    <h2 class="text-center mb-4" style="color:#2e8b57" >Lịch sử đặt phòng</h2>
    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover order-history-table">
            <thead class="thead-dark">
                <tr>
                    <th>Mã đặt phòng</th>
                    <th>Tên phòng</th>
                    <th>Ngày đặt</th>
                    <th>Giờ đặt</th>
                    <th>Thời lượng</th>
                    <th>Trạng thái</th>
                    <th>Chi tiết</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var booking in Model)
                    {
                        <tr>
                            <td>@booking.BookingID</td>
                            <td>@booking.RoomPackage</td>
                            <td>@string.Format("{0:dd/MM/yyyy}", booking.BookingDate)</td>
                            <td>@booking.BookingTime</td>
                            <td>@booking.Duration giờ</td>
                            <td>
                                @(booking.ConfirmationStatus != null ? booking.ConfirmationStatus : "Chưa xác nhận")
                            </td>
                            <td>
                                @Html.ActionLink("Xem chi tiết", "ChiTietBooking", new { id = booking.BookingID }, new { @class = "btn btn-info btn-sm" })

                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="7" class="text-center">Không có lịch sử đặt phòng nào</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<br />
 
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
 
<style>
    .order-history-container {
        background-color: #ffffff; /* Nền trắng */
        color: #333333; /* Màu chữ tối */
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
    }

    .order-history-table th, .order-history-table td {
        background-color: #ffffff; /* Đặt nền trắng cho các ô bảng */
        color: #333333; /* Màu chữ tối cho các ô bảng */
    }

    .thead-dark th {
        background-color: #343a40 !important; /* Màu nền tối cho tiêu đề bảng */
        color: #ffffff !important; /* Màu chữ trắng cho tiêu đề bảng */
    }
</style>
