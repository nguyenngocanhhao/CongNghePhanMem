@model NhaSachMetMoi.Models.BookingInfo

@{
    ViewBag.Title = "Chi tiết đặt phòng";
    Layout = "~/Views/Shared/Layoutpage.cshtml";
    <link href="~/Content/StyleSheet1.css" rel="stylesheet" />
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
    var today = DateTime.Now.ToString("yyyy-MM-ddTHH:mm");
}

<div class="container mt-5" style="background:#ffffff">
    <h1 class="text-center">Chi tiết đặt phòng</h1>

    <div class="details-container mt-4">
        <dl class="dl-horizontal">
            <dt>Mã đặt phòng</dt>
            <dd>@Html.DisplayFor(model => model.BookingID)</dd>
            <dt>Ngày đặt phòng</dt>
            <dd>@Html.DisplayFor(model => model.BookingDate)</dd>
            <dt>Giờ đặt phòng</dt>
            <dd>@Html.DisplayFor(model => model.BookingTime)</dd>
            <dt>Mã khách hàng</dt>
            <dd>@Html.DisplayFor(model => model.MaKH)</dd>
            <dt>Họ tên Khách Hàng</dt>
            <dd>@Html.DisplayFor(model => model.FullName)</dd>
            <dt>Ghi chú</dt>
            <dd>@Model.Note</dd>
        </dl>
    </div>

    <div class="table-responsive mt-4">
        <table id="ChiTietBooking" class="table table-bordered table-hover text-center">
            <thead class="thead-dark">
                <tr>
                    <th>Tên Phòng</th>
                    <th>Số Người</th>
                    <th>Thời Lượng</th>
                    <th>Tổng Tiền</th>
                    <th>Trạng Thái</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@Model.RoomPackage</td>
                    <td>@Model.NumberOfParticipants</td>
                    <td>@Model.Duration giờ</td>
                    <td>@string.Format("{0:0,0}", Model.TotalPrice).Replace(",", ".") VNĐ</td>
                    <td>@(Model.ConfirmationStatus != null ? Model.ConfirmationStatus : "Chưa xác nhận")</td>
                </tr>
            </tbody>
        </table>
    </div>

    <p>
        <a href="@Url.Action("LichSuBooking", "KhachHang", new { id = Model.MaKH })" class="btn btn-success mr-4" style="font-size:18px;background:#2E8B57;color:#fffacd">Về lịch sử đặt phòng của bạn</a>
    </p>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

<style>
    .details-container {
        padding: 20px;
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
    }

    .product-table-container {
        padding: 15px;
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
    }

    .product-thumbnail {
        width: 60px;
        height: 75px;
    }

    .action-buttons a {
        display: inline-block;
        color: #ffffff;
    }

        .action-buttons a:hover {
            color: #ffffff;
        }

    .pagination-container {
        margin-top: 20px;
    }

    .navigation {
        position: fixed;
        width: 18%;
        height: 100%;
        background-color: #2E8B57;
        color: #FFFACD;
        transition: 0.5s;
        left: 0;
        top: 0;
    }

    .main {
        position: relative;
        width: 113%;
        left: 6%;
        min-height: 100vh;
        background-color: whitesmoke;
        transition: 0.5s;
    }

    .sort-link {
        color: #ffffff;
        text-decoration: none;
    }

        .sort-link:hover {
            color: #ffffff;
        }

    .sort-icon {
        color: #ffffff;
    }
</style>
